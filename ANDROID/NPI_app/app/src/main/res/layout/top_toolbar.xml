<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#00E4DF"
    android:padding="8dp">

    <!-- Título centrado -->
    <TextView
        android:id="@+id/titulo_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <!-- Botón al lado derecho del texto -->
    <ImageButton
        android:id="@+id/btn_micro"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toEndOf="@id/titulo_menu"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Botón micro"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_micro2"
        app:tint="@android:color/white"
        android:padding="8dp"/>
</RelativeLayout>
