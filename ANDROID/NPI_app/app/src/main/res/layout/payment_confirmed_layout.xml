<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9">

    <!-- Icono de éxito -->
    <ImageView
        android:id="@+id/ivSuccessIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_check_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Mensaje de éxito -->
    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Pago completado con éxito!"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivSuccessIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mensaje de puntos -->
    <TextView
        android:id="@+id/tvPointsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has ganado 50 puntos de fidelidad."
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Mensaje de bono -->
    <TextView
        android:id="@+id/tvVoucherMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se ha generado tu bono. Puedes acceder a él en la sección 'Mis bonos'."
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvPointsMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Botón de Salir -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Salir"
        app:layout_constraintTop_toBottomOf="@id/tvVoucherMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
